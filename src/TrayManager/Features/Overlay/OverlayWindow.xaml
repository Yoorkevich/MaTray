<Window x:Class="TrayManager.Features.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:TrayManager.Infrastructure.Wpf"
        Title="TrayManager"
        Width="380" SizeToContent="Height" MaxHeight="600"
        WindowStyle="None" AllowsTransparency="True"
        ShowInTaskbar="False" Topmost="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <wpf:ExeIconConverter x:Key="IconConverter"/>
    </Window.Resources>

    <Border Background="#1E1E2E" CornerRadius="12" Padding="16" Margin="8"
            BorderBrush="#333346" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" Opacity="0.4" ShadowDepth="2" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="TrayManager" FontSize="18" FontWeight="SemiBold"
                           Foreground="#CDD6F4"/>
                <TextBlock Text="Background processes" FontSize="12"
                           Foreground="#6C7086" Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Process list -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          MaxHeight="460">
                <ItemsControl ItemsSource="{Binding Processes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,6" Margin="0,2" CornerRadius="6"
                                    Background="#181825">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Image Grid.Column="0" Width="24" Height="24"
                                           Source="{Binding ExePath, Converter={StaticResource IconConverter}}"
                                           VerticalAlignment="Center"/>

                                    <!-- Name -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                                        <TextBlock Text="{Binding Name}" FontSize="13"
                                                   Foreground="#CDD6F4" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- Instance count -->
                                    <Border Grid.Column="2" CornerRadius="10"
                                            Background="#313244" Padding="6,2"
                                            VerticalAlignment="Center" Margin="4,0"
                                            Visibility="{Binding InstanceCount, Converter={x:Static wpf:InstanceCountVisibilityConverter.Instance}}">
                                        <TextBlock FontSize="11" Foreground="#A6ADC8"
                                                   TextAlignment="Center">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}×{0}">
                                                    <Binding Path="InstanceCount"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Border>

                                    <!-- Kill button -->
                                    <Button Grid.Column="3" Width="28" Height="28"
                                            VerticalAlignment="Center" Margin="4,0,0,0"
                                            Command="{Binding DataContext.KillCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Cursor="Hand" ToolTip="Kill process">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" CornerRadius="6"
                                                        Background="Transparent" Padding="4">
                                                    <TextBlock Text="✕" FontSize="13"
                                                               Foreground="#6C7086"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               x:Name="icon"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#FF453A"/>
                                                        <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
